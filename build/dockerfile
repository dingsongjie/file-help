############################
# STEP 1 build executable binary
############################
FROM swr.cn-east-3.myhuaweicloud.com/dangqu-public/file-help-base:release AS builder

# Install dependencies
WORKDIR /usr/src/app

# Fetch dependencies.
# Using go get.
COPY .  .
RUN go mod download && go mod verify

ARG TARGETOS
ARG TARGETARCH
ENV TARGETOS=linux
ENV TARGETARCH=amd64
ENV CGO_ENABLED=1 
ENV GOOS=linux
ENV PKG_CONFIG_PATH="/usr/lib/pkgconfig"
ENV CC=gcc
RUN GOOS=${TARGETOS} GOARCH=${TARGETARCH} go build -v -o /usr/src/app/app ./website
RUN go test ./...


FROM swr.cn-east-3.myhuaweicloud.com/dangqu-public/file-help-base AS final

COPY --from=builder /usr/src/app/app .

ENV PORT 8080
ENV GIN_MODE release
EXPOSE 8080

# Run the Go Gin binary.
ENTRYPOINT ["./app"]